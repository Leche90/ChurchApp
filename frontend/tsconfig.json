{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "typeRoots": ["node_modules/@types", "src/@types"],
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      },
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }