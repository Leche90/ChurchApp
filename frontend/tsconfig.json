{
  "compilerOptions": {
    "types": [
      "node",
      "react",
      "react-dom",
      "estree"
    ],
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
